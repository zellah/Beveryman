<!-- Fragment for each drink page  -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/drink_info"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/drink_title"
                android:text="@string/drink_title"
                android:textSize="25dip"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/drink_description"
                android:text="@string/drink_description"
                android:layout_below="@+id/drink_title"
                android:textSize="20dip"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/drink_ingredients_text"
                android:text="@string/ingredients"
                android:layout_below="@+id/drink_description"
                android:textSize="15dip"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/drink_ingredients"
                android:text="@string/drink_ingredients"
                android:layout_below="@+id/drink_ingredients_text"
                android:textSize="20dip"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/pour_button"
            android:text="@string/pour_button_text"
            android:layout_below="@+id/drink_info"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="150dip"
            android:layout_height="150dip"/>
    </LinearLayout>
</RelativeLayout>
